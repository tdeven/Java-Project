package array;
 import java.util.Arrays;
public class ArrayWithMethod {

	/*
	 * =========== Array With Method==========
	 * 1> array as arguement:
	 * 
	 *    void sum(int a[]);
	 *    {
	 *    }
	 *    sum(array);
	 *    
	 * 2>array as return data type:
	 *  int[] getData(){
	 * return array;
	 * }
	 * 
	 *   
	 *
	 * 
	 */
	public static void main(String[] args) {
//		
//      int data[] = {36,21,23,12,25,52};
//      
//      sum(data);
//      
//		int Dc[] = {12,12,12};
//		PrintArray(Dc);
//		
//	
//		//Derivate(d);
//		
//		String Name[] = { " Nepal", "India", "China","Korea","USA"};
//?.out.println(Arrays.toString(x));

		int get[] = getEvennumsFrom1to100();
		System.out.println(Arrays.toString(get));
	
	
	
	}
	
	
 static void sum(int values[]) {
	int s=0; 
	for(int x: values) {
		s=s+x;
	}
	System.out.println("total=" +s);
   }
 
   static void PrintArray(int array[]) {
	   int tot=0;
	   for(int m:array) {
		   tot=tot+m;
		   
	   }
	   System.out.println("Master=" +tot);
   }
   
   static void Derivate(int Lala[]) {
	  
	   for(int d:Lala) {
		   
	  
	   System.out.println(d);
     }
   }
   
  // Country name:
   static void Country(String Option[]) {
	   
	   for(String n: Option ) {
		   System.out.println(n);
	   }
   }
   
   // 3. Array return type
  static int[] getOddnumsFrom1to100() {
	   int oddnums[]= new int[50];
	   int j =0;
	   for(int i=1; i<=100; i++) {
		
		   if(i%2 != 0) {
			   oddnums[j] = i;
			   j++;
			   
		   }
	   }
	   return oddnums;
   }
  static int[] getEvennumsFrom1to100() {
	  int evennums[] = new int[50];
	  int m=0;
	  for(int k=0; k<=100; k++) {
		  if(k%2 == 0) {
			  evennums[m] =k;
			  k++;
		  }
	  }
	  return evennums;
  }
}
